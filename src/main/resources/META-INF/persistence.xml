<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             version="2.0">
<persistence-unit name="teste_hibernate_gui" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>model.common.Common</class>
    <class>model.Marca</class>
    <class>model.Automovel</class>
    <class>model.Modelo</class>
    <class>model.Cliente</class>
    <class>model.Locacao</class>

    <properties>
        <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
        <property name="hibernate.connection.url"
                  value="jdbc:postgresql://localhost:5432/testehibernategui" />
        <property name="hibernate.connection.username" value="postgres" />
        <property name="hibernate.connection.password" value="postgres" />
        <property name="hibernate.default_schema" value="public" />
         <property name="hibernate.format_sql" value="true"/>
        <property name="hibernate.id.new_generator_mappings" value="true" />
        <property name="hibernate.show_sql" value="true" />
        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />



        <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        <!--<property name="org.hibernate.hbm2ddl.auto" value="create-drop" />-->

        <property name="hibernate.jdbc.fetch_size" value="100" />
        <property name="hibernate.jdbc.batch_size" value="30" />
        <property name="hibernate.hbm2ddl.import_files_sql_extractor"
                  value="org.hibernate.tool.hbm2ddl.MultipleLinesSqlCommandExtractor" />

        <property name="hibernate.connection.useUnicode" value="true" />
        <property name="hibernate.connection.characterEncoding"
                  value="UTF-8" />

    </properties>

</persistence-unit>

</persistence>